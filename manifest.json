{
 	"manifest_version": 2,
 	"name": "Jira Dark Theme",
 	"version": "1.0",
	"description": "Switch to dark version of Jira",
	"icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
	},
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://*.atlassian.net/*"
      ],
      "exclude_matches": [
        "https://*.atlassian.net/wiki/*"
      ],
      "css": [
        "css/main.css"
      ],
      "js": [
        "background.js"
      ]
    }
  ]
}
